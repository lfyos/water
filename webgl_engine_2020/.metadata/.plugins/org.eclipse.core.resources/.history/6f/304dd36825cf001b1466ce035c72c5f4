package kernel_maintain;

import kernel_common_class.debug_information;
import kernel_file_manager.travel_through_directory;
import kernel_file_manager.file_writer;
import kernel_part.body;
import kernel_part.primitive_from_box;
import kernel_transformation.box;
import kernel_transformation.location;

public class test_1 
{
	public static void main(String args[])
	{
		debug_information.println("Begin");
		
		body b=new body(1,
				new location[] {new location()},
				new box[] {new box(0,0,0,1,1,1)},
				new String [] {"1"},
				new String[][] {new String[] {"0","0","0","1"}},
				new double[][] {new double[] {0,0,0}},
				new String[][] {new String[] {"1"}});
		
		primitive_from_box p=new primitive_from_box(new body[] {b});
		
		for(int j=0;j<12;j++) {
			debug_information.print  (",triangle:",j);
			for(int k=0;k<3;k++){
					double data[]=p.get_primitive_vertex_location_data(0,0,j,k);
					debug_information.print  (",vertex:",k);
					debug_information.print  (",x:",data[0]);
					debug_information.print  (",y:",data[1]);
					debug_information.println(",z:",data[2]);
			}
		}
		debug_information.println("End");
	}
}
