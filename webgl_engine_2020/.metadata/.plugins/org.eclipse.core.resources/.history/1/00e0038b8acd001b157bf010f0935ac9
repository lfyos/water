package get_old_part_rude;

import kernel_common_class.debug_information;
import kernel_file_manager.file_reader;
import kernel_file_manager.file_writer;

public class test 
{
	public static void main(String args[])
	{
		debug_information.println("Begin");
		
		file_reader fr=new file_reader("e:\\t.mesh","GBK");
		file_writer fw=new file_writer("e:\\t.txt","GBK");
		file_writer face_fw=new file_writer("e:\\t.txt.face","GBK");
		file_writer edge_fw=new file_writer("e:\\t.txt.edge","GBK");
		
		
		part_rude pr=new part_rude(fr,1,1,false,false,false);
		pr.write_out(fw);
		pr.write_out_face(face_fw);
		pr.write_out_edge(edge_fw);
		
		fr.close();
		fw.close();
		face_fw.close();
		edge_fw.close();
		
		fr=new file_reader("e:\\t.txt","GBK");
		kernel_part.part_rude new_pr=new  kernel_part.part_rude(fr,1);
		fr.close();
		
		for(int i=0;i<new_pr.body_number();i++)
			for(int j=0;j<new_pr.body_array[i].face_number();j++) {
				debug_information.println(
						 "body:"+i+",face:"+j
						+",total_face_primitive_number:"+new_pr.body_array[i].face_array[j].fa_face.total_face_primitive_number
						+",attribute_number:"+new_pr.body_array[i].face_array[j].fa_face.attribute_number);
			}
		debug_information.println("End");
	}
}
