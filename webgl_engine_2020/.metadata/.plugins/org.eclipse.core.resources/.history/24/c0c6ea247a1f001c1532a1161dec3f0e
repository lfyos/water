package kernel_part;

import kernel_file_manager.file_reader;

public class part_container_for_delete_part_file extends part_container
{
	public part_container_for_delete_part_file()
	{
		super();
	}
	
	public void deo_delete()
	{
		for(part_link_list pll=get_part_list();pll!=null;pll=pll.next) {
			part p=pll.p;
			String clear_file_name_array[]=new String[]
			{
				p.mesh_file_name,
				p.material_file_name,
				p.description_file_name,
				p.audio_file_name,
				p.mesh_file_name+".face",
				p.mesh_file_name+".face.gzip",
				p.mesh_file_name+".edge",
				p.mesh_file_name+".edge.gzip"
			};
			for(int i=0,ni=clear_file_name_array.length;i<ni;i++)
				if(p.part_par.clear_model_file_flag[i])
					if(clear_file_name_array[i]!=null){
						String file_name=p.directory_name+file_reader.separator(clear_file_name_array[i]);
								if(new File(file_name).exists())
									pfdc.append(file_name);
							}
					if(part_par.clear_buffer_head_file_flag)
						if(part_par.combine_to_part_package_flag){
							String part_temporary_file_directory=file_directory.part_file_directory(this,system_par,scene_par);
							String file_name=part_temporary_file_directory+"mesh.head.gzip_text";
							if(new File(file_name).exists())
								pfdc.append(file_name);
						}
		}
	}
}
